<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/StartSearching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startSearching"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/newButton"
        android:onClick="StartSearch"/>
    <TextView
        android:id="@+id/TextBusieness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a Busieness type"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/StartSearching"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Spinner
        android:id="@+id/BuissnesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextBusieness"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/TextRatingOperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick how to select rating"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/BuissnesSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <RadioGroup
        android:id="@+id/RadioRatingOperator"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextRatingOperator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radioEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equal to"
            android:onClick="onRadioRatingOperator"/>
        <RadioButton android:id="@+id/radioLess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less and equal to"
            android:layout_marginStart="5dp"
            android:onClick="onRadioRatingOperator"/>
        <RadioButton android:id="@+id/radioHigher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher and equal to"
            android:layout_marginStart="5dp"
            android:onClick="onRadioRatingOperator"/>
    </RadioGroup>

    <TextView
        android:id="@+id/TextRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick rating"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/RadioRatingOperator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <RadioGroup
        android:id="@+id/RadioRating"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextRating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginStart="5dp"
            android:onClick="onRadioRating"/>
        <RadioButton android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginStart="20dp"
            android:onClick="onRadioRating"/>
        <RadioButton android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginStart="20dp"
            android:onClick="onRadioRating"/>
        <RadioButton android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginStart="20dp"
            android:onClick="onRadioRating"/>
        <RadioButton android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginStart="20dp"
            android:onClick="onRadioRating"/>
    </RadioGroup>



</android.support.constraint.ConstraintLayout>